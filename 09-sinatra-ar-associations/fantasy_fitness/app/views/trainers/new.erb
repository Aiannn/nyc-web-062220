<h1>New Trainer</h1>

<form action="/trainers" method="POST">
  <input type="text" name="name" placeholder="name">
  <input type="text" name="bio" placeholder="bio">
  <input type="number" name="age" placeholder="age">

  <select name="gym_id">
    <% @gyms.each do |gym|%>
      <option value="<%= gym.id %>"> <%= gym.name %> </option>
    <% end %>
  </select>

  <input type="submit">
</form>