<div class="container">
  <h1>Create New User</h1>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p style="color: red;"><%= error %></p>
    <% end %>
  <% end %>


  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :slogan %>
    <%= f.text_field :slogan %>

    <%= f.label :img_url %>
    <%= f.text_field :img_url %>

    <%= f.submit %>
  <% end %>
</div>